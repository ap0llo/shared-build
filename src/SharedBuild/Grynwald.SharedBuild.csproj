<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <!-- 
        Ignore warning NU5104: "A stable release of a package should not have a prerelease dependency."
        The shared build tasks require functionality in the not-yet released version of Cake.GitVersioning 3.5,
        so we need to reference a prerelease version
    -->
    <NoWarn>$(NoWarn),NU5104</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Cake.Frosting" Version="2.2.0" />
    <PackageReference Include="Cake.GitVersioning" Version="3.5.109" />
    <PackageReference Include="Mono.Cecil" Version="0.11.4" />
  </ItemGroup>

  <!-- Cake.GitHub (currently pulled in via git submodules instead of NuGet) -->
  <ItemGroup>
    <Compile Include="..\..\deps\Cake.GitHub\src\Cake.GitHub\**\*.cs"
             Link="_External Code\Cake.GitHub\%(RecursiveDir)\%(FileName)%(Extension)"
             Exclude="..\..\deps\Cake.GitHub\src\Cake.GitHub\Properties\**\*.cs"/>
    <PackageReference Include="Octokit" Version="0.51.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\3rdPartyNotices.txt" Pack="true" PackagePath="3rdPartyNotices.txt" />
  </ItemGroup>


</Project>
